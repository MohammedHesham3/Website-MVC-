{
  "name": "Website-MVC-Azure-Deployment",
  "description": "Azure App Service deployment configuration for ASP.NET MVC application",
  "runtime": {
    "framework": "dotnet",
    "version": "8.0"
  },
  "build": {
    "solution": "Website(MVC).sln",
    "project": "Website(MVC)/Website(MVC).csproj",
    "configuration": "Release"
  },
  "deployment": {
    "type": "azure-app-service",
    "platform": "windows",
    "publishPath": "./publish"
  },
  "secrets": {
    "required": [
      "AZURE_WEBAPP_NAME",
      "AZURE_WEBAPP_PUBLISH_PROFILE"
    ]
  }
}
